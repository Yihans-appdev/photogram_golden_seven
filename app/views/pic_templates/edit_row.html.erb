<h1>Edit Photo <%= @photo_id %> </h1>

<form action="/update_photo/<%= @photo_id %>">
   <div>
    <label for="source_input">
      Image URL
    </label>

    <input id="source_input" 
      type="text" 
      name="the_source" 
      value="<%= @original_url %>">
  
  </div>

  <div>
    <label for="caption_input">
      Caption
    </label>

    <input id="caption_input" type="text" name="the_caption" value="<%= @original_caption %>">
  </div>

  <button>
    Update Photo
  </button>
  
</form>